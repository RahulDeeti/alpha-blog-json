<h1 align="center">Create a new category</h1>

  <div >
    <%= render 'shared/errors', obj: @category %>
    <%= form_with(model: @category, role: "form", local: true) do |f| %>
      <div>
        <div>
          <%= f.label :name, "Category Name" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter a name", autofocus: true %>
        </div>
      </div>
      <br/>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit( class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
    <br/>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
