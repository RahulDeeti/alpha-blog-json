<h1 align="center">All Alpha Bloggers</h1>
<div align="center">
  <% @users.each do |user| %>
    <ul>
    <div class="card-header font-italic">
    <%= link_to user.username, user %>
  </div>
      <div>
      <%= link_to "View profile", user %>
      <% if logged_in? %>
        <% if user == current_user %>
          <%= button_to "Edit profile", edit_user_path(user), method: :get%>
        <% end %>
        <% if current_user.admin? %>
        <%= button_to 'Delete', user_path(user), method: :delete %>
        <% end %>
      <% end %>
      </div>
    </ul>
  <% end %> 
</div>